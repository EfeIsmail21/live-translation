// app/page.tsx

'use client';

import { useState, useRef, useEffect } from 'react';
import { Mic, Square, Loader2 } from 'lucide-react';

type ConversationMessage = {
  id: string;
  role: 'driver' | 'receptionist';
  originalText: string;
  originalLang: string;
  translatedText: string;
  translatedLang: string;
  timestamp: number;
};

const languages = [
  { code: 'nl', flag: 'NL', name: 'Nederlands' },
  { code: 'pl', flag: 'PL', name: 'Polski' },
  { code: 'ro', flag: 'RO', name: 'Română' },
  { code: 'bg', flag: 'BG', name: 'Български' },
  { code: 'tr', flag: 'TR', name: 'Türkçe' },
];

const getLanguageName = (code: string) => {
  return languages.find(l => l.code === code)?.name || code.toUpperCase();
};

export default function TranslatorPage() {
  // Driver side state
  const [isRecording, setIsRecording] = useState(false);
  const [isProcessing, setIsProcessing] = useState(false);
  const [selectedLang, setSelectedLang] = useState<string | null>(null); // null = AUTO
  const [detectedLang, setDetectedLang] = useState('nl');

  // Staff side state
  const [isStaffRecording, setIsStaffRecording] = useState(false);
  const [isStaffProcessing, setIsStaffProcessing] = useState(false);

  // Conversation history
  const [driverConversation, setDriverConversation] = useState<ConversationMessage[]>([]);
  const [receptionistConversation, setReceptionistConversation] = useState<ConversationMessage[]>([]);

  const mediaRecorder = useRef<MediaRecorder | null>(null);
  const audioChunks = useRef<Blob[]>([]);
  const staffMediaRecorder = useRef<MediaRecorder | null>(null);
  const staffAudioChunks = useRef<Blob[]>([]);
  const driverScrollRef = useRef<HTMLDivElement>(null);
  const receptionistScrollRef = useRef<HTMLDivElement>(null);

  // Auto-scroll to bottom when new messages arrive
  useEffect(() => {
    if (driverScrollRef.current) {
      driverScrollRef.current.scrollTop = driverScrollRef.current.scrollHeight;
    }
  }, [driverConversation]);

  useEffect(() => {
    if (receptionistScrollRef.current) {
      receptionistScrollRef.current.scrollTop = receptionistScrollRef.current.scrollHeight;
    }
  }, [receptionistConversation]);

  const startRecording = async () => {
    try {
      const stream = await navigator.mediaDevices.getUserMedia({ audio: true });

      let mimeType = 'audio/webm';
      let fileExtension = 'webm';

      if (MediaRecorder.isTypeSupported('audio/mp4')) {
        mimeType = 'audio/mp4';
        fileExtension = 'mp4';
      } else if (MediaRecorder.isTypeSupported('audio/webm;codecs=opus')) {
        mimeType = 'audio/webm;codecs=opus';
        fileExtension = 'webm';
      }

      mediaRecorder.current = new MediaRecorder(stream, { mimeType });
      audioChunks.current = [];

      mediaRecorder.current.ondataavailable = (event) => {
        audioChunks.current.push(event.data);
      };

      mediaRecorder.current.onstop = async () => {
        setIsProcessing(true);

        const audioBlob = new Blob(audioChunks.current, { type: mimeType });
        const formData = new FormData();
        formData.append('audio', audioBlob, `recording.${fileExtension}`);
        formData.append('targetLang', 'en');

        try {
          const response = await fetch('/api/translate', {
            method: 'POST',
            body: formData,
          });

          const result = await response.json();
          const actualLang = selectedLang || result.originalLanguage;
          setDetectedLang(actualLang);

          // Add to driver's conversation
          const driverMsg: ConversationMessage = {
            id: Date.now().toString(),
            role: 'driver',
            originalText: result.originalText,
            originalLang: actualLang,
            translatedText: result.translatedText,
            translatedLang: 'en',
            timestamp: Date.now(),
          };
          setDriverConversation(prev => [...prev, driverMsg]);

          // Add to receptionist's conversation
          const receptionistMsg: ConversationMessage = {
            id: Date.now().toString() + '-r',
            role: 'driver',
            originalText: result.originalText,
            originalLang: actualLang,
            translatedText: result.translatedText,
            translatedLang: 'en',
            timestamp: Date.now(),
          };
          setReceptionistConversation(prev => [...prev, receptionistMsg]);

          // Auto-play translated audio
          const audioData = Uint8Array.from(atob(result.audioBase64), c => c.charCodeAt(0));
          const audioContext = new AudioContext();
          const audioBufferDecoded = await audioContext.decodeAudioData(audioData.buffer);
          const source = audioContext.createBufferSource();
          source.buffer = audioBufferDecoded;
          source.connect(audioContext.destination);
          source.start();

        } catch (error) {
          console.error('Translation error:', error);
        } finally {
          setIsProcessing(false);
        }
      };

      mediaRecorder.current.start();
      setIsRecording(true);
    } catch (error) {
      console.error('Microphone access denied:', error);
    }
  };

  const stopRecording = () => {
    if (mediaRecorder.current && isRecording) {
      mediaRecorder.current.stop();
      setIsRecording(false);
    }
  };

  const startStaffRecording = async () => {
    try {
      const stream = await navigator.mediaDevices.getUserMedia({ audio: true });

      let mimeType = 'audio/webm';
      let fileExtension = 'webm';

      if (MediaRecorder.isTypeSupported('audio/mp4')) {
        mimeType = 'audio/mp4';
        fileExtension = 'mp4';
      } else if (MediaRecorder.isTypeSupported('audio/webm;codecs=opus')) {
        mimeType = 'audio/webm;codecs=opus';
        fileExtension = 'webm';
      }

      staffMediaRecorder.current = new MediaRecorder(stream, { mimeType });
      staffAudioChunks.current = [];

      staffMediaRecorder.current.ondataavailable = (event) => {
        staffAudioChunks.current.push(event.data);
      };

      staffMediaRecorder.current.onstop = async () => {
        setIsStaffProcessing(true);

        const audioBlob = new Blob(staffAudioChunks.current, { type: mimeType });
        const formData = new FormData();
        formData.append('audio', audioBlob, `recording.${fileExtension}`);
        formData.append('targetLang', detectedLang || 'en');

        try {
          const response = await fetch('/api/translate', {
            method: 'POST',
            body: formData,
          });

          const result = await response.json();

          // Add to receptionist's conversation
          const receptionistMsg: ConversationMessage = {
            id: Date.now().toString(),
            role: 'receptionist',
            originalText: result.originalText,
            originalLang: 'nl',
            translatedText: result.translatedText,
            translatedLang: detectedLang,
            timestamp: Date.now(),
          };
          setReceptionistConversation(prev => [...prev, receptionistMsg]);

          // Add to driver's conversation
          const driverMsg: ConversationMessage = {
            id: Date.now().toString() + '-d',
            role: 'receptionist',
            originalText: result.originalText,
            originalLang: 'nl',
            translatedText: result.translatedText,
            translatedLang: detectedLang,
            timestamp: Date.now(),
          };
          setDriverConversation(prev => [...prev, driverMsg]);

          // Auto-play translated audio
          const audioData = Uint8Array.from(atob(result.audioBase64), c => c.charCodeAt(0));
          const audioContext = new AudioContext();
          const audioBufferDecoded = await audioContext.decodeAudioData(audioData.buffer);
          const source = audioContext.createBufferSource();
          source.buffer = audioBufferDecoded;
          source.connect(audioContext.destination);
          source.start();

        } catch (error) {
          console.error('Staff translation error:', error);
        } finally {
          setIsStaffProcessing(false);
        }
      };

      staffMediaRecorder.current.start();
      setIsStaffRecording(true);
    } catch (error) {
      console.error('Staff microphone access denied:', error);
    }
  };

  const stopStaffRecording = () => {
    if (staffMediaRecorder.current && isStaffRecording) {
      staffMediaRecorder.current.stop();
      setIsStaffRecording(false);
    }
  };

  const clearConversation = () => {
    setDriverConversation([]);
    setReceptionistConversation([]);
    setDetectedLang('nl');
  };

  return (
    <div style={{ background: '#ffffff', minHeight: '100vh', display: 'flex', flexDirection: 'column' }}>
      {/* Header */}
      <header style={{ textAlign: 'center', padding: '32px 24px', borderBottom: '2px solid #ce2828', background: '#ffffff' }}>
        <h1 style={{ fontSize: '32px', fontWeight: 'bold', color: '#212529', margin: 0, fontFamily: 'Roboto' }}>
          Railport Vertaling
        </h1>
        <p style={{ fontSize: '14px', color: '#666666', marginTop: '8px', fontFamily: 'Roboto' }}>
          AI Vertaling voor H. Essers
        </p>
      </header>

      {/* Split Screen Layout */}
      <div style={{ display: 'flex', flex: 1, flexDirection: 'row', gap: '2px', background: '#e0e0e0' }}>

        {/* Driver Side - Left */}
        <div style={{ flex: 1, background: '#f5f5f5', display: 'flex', flexDirection: 'column', alignItems: 'center', padding: '48px 32px' }}>
          <div style={{ display: 'flex', alignItems: 'center', gap: '16px', marginBottom: '32px' }}>
            <h2 style={{ fontSize: '28px', fontWeight: 'bold', color: '#212529', fontFamily: 'Roboto', margin: 0 }}>
              Chauffeur
            </h2>
            <button
              onClick={clearConversation}
              style={{
                padding: '8px 16px',
                background: '#ffffff',
                color: '#ce2828',
                border: '1px solid #ce2828',
                borderRadius: '8px',
                fontSize: '12px',
                fontWeight: '500',
                cursor: 'pointer',
                fontFamily: 'Roboto',
                transition: 'all 200ms',
              }}
              onMouseEnter={(e) => {
                e.currentTarget.style.background = '#ce2828';
                e.currentTarget.style.color = '#ffffff';
              }}
              onMouseLeave={(e) => {
                e.currentTarget.style.background = '#ffffff';
                e.currentTarget.style.color = '#ce2828';
              }}
            >
              Wis Gesprek
            </button>
          </div>

          {/* Language Selector */}
          <div style={{ marginBottom: '24px' }}>
            <p style={{ fontSize: '12px', color: '#666666', marginBottom: '12px', textAlign: 'center', fontFamily: 'Roboto' }}>
              Selecteer Taal
            </p>
            <div style={{ display: 'flex', gap: '8px', alignItems: 'center', justifyContent: 'center' }}>
              <button
                onClick={() => setSelectedLang(null)}
                style={{
                  padding: '8px 16px',
                  background: selectedLang === null ? '#ce2828' : '#ffffff',
                  color: selectedLang === null ? '#ffffff' : '#212529',
                  border: `2px solid ${selectedLang === null ? '#ce2828' : '#e0e0e0'}`,
                  borderRadius: '8px',
                  fontSize: '14px',
                  fontWeight: '500',
                  cursor: 'pointer',
                  fontFamily: 'Roboto',
                  transition: 'all 200ms',
                }}
              >
                AUTO
              </button>
              {languages.map(lang => (
                <button
                  key={lang.code}
                  onClick={() => setSelectedLang(lang.code)}
                  style={{
                    padding: '8px 16px',
                    background: selectedLang === lang.code ? '#ce2828' : '#ffffff',
                    color: selectedLang === lang.code ? '#ffffff' : '#212529',
                    border: `2px solid ${selectedLang === lang.code ? '#ce2828' : '#e0e0e0'}`,
                    borderRadius: '8px',
                    fontSize: '14px',
                    fontWeight: '500',
                    cursor: 'pointer',
                    fontFamily: 'Roboto',
                    transition: 'all 200ms',
                  }}
                  title={lang.name}
                >
                  {lang.flag}
                </button>
              ))}
            </div>
          </div>

          {/* Large Circular Button */}
          <button
            onClick={isRecording ? stopRecording : startRecording}
            disabled={isProcessing}
            className={isRecording ? 'pulse-glow' : ''}
            style={{
              width: '150px',
              height: '150px',
              borderRadius: '50%',
              background: '#ce2828',
              border: 'none',
              cursor: isProcessing ? 'not-allowed' : 'pointer',
              display: 'flex',
              alignItems: 'center',
              justifyContent: 'center',
              boxShadow: isRecording ? '0 0 40px rgba(206, 40, 40, 0.6)' : '0 8px 32px rgba(0,0,0,0.3)',
              transition: 'all 300ms ease',
              opacity: isProcessing ? 0.7 : 1,
              animation: isRecording ? 'pulse 1.5s infinite' : 'none',
            }}
            onMouseEnter={(e) => {
              if (!isProcessing && !isRecording) {
                e.currentTarget.style.transform = 'scale(1.05)';
              }
            }}
            onMouseLeave={(e) => {
              if (!isRecording) {
                e.currentTarget.style.transform = 'scale(1)';
              }
            }}
          >
            {isProcessing ? (
              <Loader2 size={48} color="#ffffff" style={{ animation: 'spin 1s linear infinite' }} />
            ) : isRecording ? (
              <Square size={48} color="#ffffff" />
            ) : (
              <Mic size={48} color="#ffffff" />
            )}
          </button>

          <p style={{ marginTop: '24px', fontSize: '14px', color: '#666666', textAlign: 'center', fontFamily: 'Roboto' }}>
            {isProcessing ? 'Verwerken...' : isRecording ? 'Opnemen...' : selectedLang ? `Taal: ${getLanguageName(selectedLang)}` : 'Modus: AUTO'}
          </p>

          {/* Chat Bubbles */}
          <div
            ref={driverScrollRef}
            style={{
              marginTop: '48px',
              width: '100%',
              maxWidth: '600px',
              height: '500px',
              background: '#ffffff',
              borderRadius: '12px',
              padding: '24px',
              overflowY: 'auto',
              boxShadow: '0 2px 16px rgba(0,0,0,0.08)',
              border: '1px solid #e0e0e0',
            }}
          >
            {driverConversation.length === 0 ? (
              <p style={{ textAlign: 'center', color: '#999999', fontSize: '14px', fontFamily: 'Roboto', marginTop: '200px' }}>
                Chat wordt hier weergegeven...
              </p>
            ) : (
              driverConversation.map((msg) => (
                <div
                  key={msg.id}
                  style={{
                    display: 'flex',
                    flexDirection: 'column',
                    alignItems: msg.role === 'driver' ? 'flex-start' : 'flex-end',
                    marginBottom: '20px',
                  }}
                >
                  {/* Chat Bubble */}
                  <div
                    style={{
                      maxWidth: '75%',
                      padding: '16px 20px',
                      borderRadius: '12px',
                      background: msg.role === 'driver' ? '#ce2828' : '#f5f5f5',
                      color: msg.role === 'driver' ? '#ffffff' : '#212529',
                      boxShadow: '0 1px 4px rgba(0,0,0,0.08)',
                    }}
                  >
                    <p style={{ fontSize: '11px', opacity: 0.7, marginBottom: '6px', fontFamily: 'Roboto', fontWeight: '500', textTransform: 'uppercase' }}>
                      {msg.role === 'driver' ? 'Jij' : 'Receptionist'}
                    </p>
                    <p style={{ fontSize: '16px', lineHeight: '1.5', fontFamily: 'Roboto', margin: 0 }}>
                      {msg.originalText}
                    </p>
                  </div>
                  {/* Translation below bubble */}
                  <div
                    style={{
                      maxWidth: '75%',
                      marginTop: '8px',
                      padding: '8px 12px',
                      background: 'rgba(0,0,0,0.05)',
                      borderRadius: '8px',
                      fontSize: '14px',
                      color: '#666666',
                      fontFamily: 'Roboto',
                      fontStyle: 'italic',
                    }}
                  >
                    {msg.translatedText}
                  </div>
                </div>
              ))
            )}
          </div>
        </div>

        {/* Receptionist Side - Right */}
        <div style={{ flex: 1, background: '#ffffff', display: 'flex', flexDirection: 'column', alignItems: 'center', padding: '48px 32px' }}>
          <h2 style={{ fontSize: '28px', fontWeight: 'bold', color: '#212529', marginBottom: '32px', fontFamily: 'Roboto' }}>
            Receptionist
          </h2>

          {/* Chat Bubbles */}
          <div
            ref={receptionistScrollRef}
            style={{
              width: '100%',
              maxWidth: '600px',
              height: '500px',
              background: '#ffffff',
              borderRadius: '12px',
              padding: '24px',
              overflowY: 'auto',
              boxShadow: '0 2px 16px rgba(0,0,0,0.08)',
              border: '1px solid #e0e0e0',
              marginBottom: '32px',
            }}
          >
            {receptionistConversation.length === 0 ? (
              <p style={{ textAlign: 'center', color: '#999999', fontSize: '14px', fontFamily: 'Roboto', marginTop: '200px' }}>
                Chat wordt hier weergegeven...
              </p>
            ) : (
              receptionistConversation.map((msg) => (
                <div
                  key={msg.id}
                  style={{
                    display: 'flex',
                    flexDirection: 'column',
                    alignItems: msg.role === 'receptionist' ? 'flex-end' : 'flex-start',
                    marginBottom: '20px',
                  }}
                >
                  {/* Chat Bubble */}
                  <div
                    style={{
                      maxWidth: '75%',
                      padding: '16px 20px',
                      borderRadius: '12px',
                      background: msg.role === 'receptionist' ? '#ce2828' : '#f5f5f5',
                      color: msg.role === 'receptionist' ? '#ffffff' : '#212529',
                      boxShadow: '0 1px 4px rgba(0,0,0,0.08)',
                    }}
                  >
                    <p style={{ fontSize: '11px', opacity: 0.7, marginBottom: '6px', fontFamily: 'Roboto', fontWeight: '500', textTransform: 'uppercase' }}>
                      {msg.role === 'receptionist' ? 'Jij' : 'Chauffeur'}
                    </p>
                    <p style={{ fontSize: '16px', lineHeight: '1.5', fontFamily: 'Roboto', margin: 0 }}>
                      {msg.originalText}
                    </p>
                  </div>
                  {/* Translation below bubble */}
                  <div
                    style={{
                      maxWidth: '75%',
                      marginTop: '8px',
                      padding: '8px 12px',
                      background: 'rgba(0,0,0,0.05)',
                      borderRadius: '8px',
                      fontSize: '14px',
                      color: '#666666',
                      fontFamily: 'Roboto',
                      fontStyle: 'italic',
                    }}
                  >
                    {msg.translatedText}
                  </div>
                </div>
              ))
            )}
          </div>

          {/* Staff Response Button */}
          {detectedLang && (
            <button
              onClick={isStaffRecording ? stopStaffRecording : startStaffRecording}
              disabled={isStaffProcessing}
              style={{
                padding: '12px 32px',
                background: '#ce2828',
                color: '#ffffff',
                border: 'none',
                borderRadius: '24px',
                fontSize: '14px',
                fontWeight: '500',
                fontFamily: 'Roboto',
                cursor: isStaffProcessing ? 'not-allowed' : 'pointer',
                display: 'flex',
                alignItems: 'center',
                gap: '8px',
                boxShadow: '0 4px 16px rgba(0,0,0,0.2)',
                transition: 'all 300ms ease',
                opacity: isStaffProcessing ? 0.7 : 1,
              }}
              onMouseEnter={(e) => {
                if (!isStaffProcessing) {
                  e.currentTarget.style.background = '#b02323';
                  e.currentTarget.style.transform = 'translateY(-2px)';
                }
              }}
              onMouseLeave={(e) => {
                e.currentTarget.style.background = '#ce2828';
                e.currentTarget.style.transform = 'translateY(0)';
              }}
            >
              {isStaffProcessing ? (
                <>
                  <Loader2 size={16} style={{ animation: 'spin 1s linear infinite' }} />
                  Translating...
                </>
              ) : isStaffRecording ? (
                <>
                  <Square size={16} />
                  Stop
                </>
              ) : (
                <>
                  <Mic size={16} />
                  Antwoord in het {getLanguageName(detectedLang)}
                </>
              )}
            </button>
          )}
        </div>
      </div>
    </div>
  );
}
